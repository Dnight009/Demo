@model Demo.Models.KHACHHANG
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Dangky</h2>

<form method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3">
        <label class="form-label">Ho ten</label>
        <input type="text" class="form-control" name="HoTen">
        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Ten tai khoan</label>
        <input type="text" class="form-control" name="Taikhoan">
        @Html.ValidationMessageFor(model => model.Taikhoan, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Mat Khau</label>
        <input type="password" class="form-control" name="MatKhau">
        @Html.ValidationMessageFor(model => model.Matkhau, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Nhap lai mat Khau</label>
        <input type="password" class="form-control" name="MatkhauNL">
        @Html.ValidationMessageFor(model => model.MatkhauNL, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Ngay sinh</label>
        <input type="date" class="form-control" name="Ngaysinh">
        @Html.ValidationMessageFor(model => model.Ngaysinh, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">Dia Chi</label>
        <input type="text" class="form-control" name="DiachiKH">
        @Html.ValidationMessageFor(model => model.DiachiKH, "", new { @class = "text-danger" })
    </div>

    <div class="mb-3">
        <label class="form-label">SDT</label>
        <input type="text" class="form-control" name="DienthoaiKH">
        @Html.ValidationMessageFor(model => model.DienthoaiKH, "", new { @class = "text-danger" })
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>
